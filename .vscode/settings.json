{
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    // "python.formatting.provider": "none",
    // "editor.formatOnSave": true,
    "python.formatting.provider": "autopep8",
    // "python.formatting.autopep8Path": "autopep8",
    "python.formatting.autopep8Args": [
        "--aggressive",
        "--max-line-length=120",
        "--ignore=E402",
        "--exclude=venv",
        "--ignore-local-config"
    ],
}
